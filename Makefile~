################# Makefile ####################
CC=gcc
CFLAGS=-I.
DEPS = interpretador.h operacoes.h carregador.h
OBJ = emulador.o interpretador.o operacoes.o carregador.o

all: emulador

%.o: %.c $(DEPS)
	$(CC) -c -o $@ $< $(CFLAGS)

emulador: $(OBJ)
	$(CC) -o $@ $^ $(CFLAGS) -lm
clean:
	rm -rf *.o
mrproper:
	rm -rf main
